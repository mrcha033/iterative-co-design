{
  "task": "wt103",
  "description": "Ablation: Heuristic graph (banded matrix, spatial locality assumption)",
  "pipeline": {
    "mode": "iterative",
    "repeats": 200,
    "warmup_iter": 40,
    "fixed_clock": true,
    "runner": "icd.runtime.runners_hf.hf_causal_lm_runner",
    "runner_context": {
      "model_loader": "icd.experiments.hf.load_hf_causal_lm",
      "model_loader_kwargs": {
        "model_name": "state-spaces/mamba-2.8b-hf",
        "sequence_length": 1024,
        "batch_size": 1,
        "prompt": [
          "The quick brown fox jumps over the lazy dog",
          "In a distant galaxy, explorers uncovered"
        ],
        "device": "cuda"
      }
    }
  },
  "graph": {
    "source": "pytorch",
    "normalize": "sym",
    "loader": "icd.experiments.hf.load_hf_causal_lm",
    "loader_kwargs": {
      "model_name": "state-spaces/mamba-2.8b-hf",
      "sequence_length": 1024,
      "batch_size": 1,
      "prompt": [
        "The quick brown fox jumps over the lazy dog",
        "In a distant galaxy, explorers uncovered"
      ],
      "device": "cuda"
    },
    "correlation": {
      "enable": false
    },
    "pytorch": {
      "hops": 2,
      "reuse_decay": 0.6,
      "max_len": 1024,
      "byte_weight": true
    },
    "nnz_cap": 2000000
  },
  "solver": {
    "time_budget_s": 120,
    "refine_steps": 600,
    "k_blocks": 4,
    "rng_seed": 0
  },
  "pair": {
    "baseline_methods": ["dense", "iterative"]
  },
  "transform": {
    "sparsity": {"enable": false},
    "quant": {"enable": false},
    "kv": {"enable": false}
  },
  "measure": {
    "ncu_enable": false,
    "power_enable": true,
    "nvtx_enable": false
  },
  "quality": {
    "enable": false
  },
  "report": {
    "out_dir": "runs/ablations/mamba_graph_heuristic",
    "formats": ["html", "csv"]
  }
}