{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HDS Mask State",
  "type": "object",
  "required": ["version", "modules"],
  "properties": {
    "version": {"type": "integer", "const": 1},
    "modules": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "logits", "step", "config"],
        "properties": {
          "path": {"type": "string"},
          "logits": {
            "type": "array",
            "items": {"type": "array", "items": {"type": "number"}}
          },
          "step": {"type": "integer", "minimum": 0},
          "config": {
            "type": "object",
            "properties": {
              "group_size": {"type": "integer", "minimum": 1},
              "active": {"type": "integer", "minimum": 1},
              "temperature_init": {"type": "number"},
              "temperature_final": {"type": "number"},
              "anneal_steps": {"type": ["integer", "null"], "minimum": 0},
              "seed": {"type": ["integer", "null"]}
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
