{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Environment Fingerprint",
  "type": "object",
  "required": ["host", "gpu", "packages"],
  "properties": {
    "host": {
      "type": "object",
      "properties": {
        "hostname": {"type": "string"},
        "driver": {"type": "string"}
      },
      "required": ["hostname", "driver"],
      "additionalProperties": false
    },
    "gpu": {
      "type": "object",
      "properties": {
        "name": {"type": "string"},
        "clocks": {"type": "object", "additionalProperties": {"type": "number"}},
        "temperatures": {"type": "object", "additionalProperties": {"type": "number"}}
      },
      "required": ["name"],
      "additionalProperties": false
    },
    "packages": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "version"],
        "properties": {
          "name": {"type": "string"},
          "version": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
